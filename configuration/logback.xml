<configuration debug="true">
    <!-- Listen to status changes in the logging framework and put them on the console. -->
    <!--
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
    -->
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- appender for UIMA and opennlp. -->
    <appender name="UIMA" class="ch.qos.logback.core.FileAppender">
        <file>uima.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Logger for opennlp -->
    <logger name="opennlp.uima" level="INFO" additivity="false">
        <appender-ref ref="UIMA" />
    </logger>

    <!-- Logger for UIMA -->
    <logger name="org.apache.uima" level="INFO" additivity="false">
        <appender-ref ref="UIMA" />
    </logger>
</configuration>