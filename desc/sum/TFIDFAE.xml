<?xml version="1.0" encoding="UTF-8"?>

<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <primitive>true</primitive>
    <annotatorImplementationName>dimitrov.sum.uima.ae.TFIDFAE</annotatorImplementationName>
    <analysisEngineMetaData>
        <name>TFIDF</name>
        <description>Computes TFIDF of each token.</description>
        <version>${pom.version}</version>
        <configurationParameters>
            <configurationParameter>
                <name>opennlp.uima.TokenType</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>dimitrov.sum.TermType</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>dimitrov.sum.TermFrequencyFeature</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>dimitrov.sum.TermSurfaceFeature</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>dimitrov.sum.TermObservationsFeature</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>dimitrov.sum.TFIDFFeature</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
        </configurationParameters>
        <configurationParameterSettings>
            <nameValuePair>
                <name>dimitrov.sum.TFIDFFeature</name>
                <value>
                    <string>tfidf</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>opennlp.uima.TokenType</name>
                <value>
                    <string>opennlp.uima.Token</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>dimitrov.sum.TermType</name>
                <value>
                    <string>dimitrov.sum.Term</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>dimitrov.sum.TermSurfaceFeature</name>
                <value>
                    <string>surface</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>dimitrov.sum.TermFrequencyFeature</name>
                <value>
                    <string>casFrequency</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>dimitrov.sum.TermObservationsFeature</name>
                <value>
                    <string>observations</string>
                </value>
            </nameValuePair>
        </configurationParameterSettings>
        <typeSystemDescription>
            <imports>
                <import location="internal:opennlp/TypeSystem.xml" />
            </imports>
        </typeSystemDescription>
        <capabilities>
            <capability>
                <inputs>
                    <type allAnnotatorFeatures="true">opennlp.uima.Term</type>
                </inputs>
                <outputs>
                    <type>opennlp.uima.Token</type>
                    <feature>opennlp.uima.Token:tfidf</feature>
                </outputs>
                <languagesSupported>
                    <language>en</language>
                </languagesSupported>
            </capability>
        </capabilities>
        <operationalProperties>
            <modifiesCas>true</modifiesCas>
            <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
        </operationalProperties>
    </analysisEngineMetaData>
</analysisEngineDescription>
